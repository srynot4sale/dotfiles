[color]
    ui = true
    pager = true

[user]
    name = Aaron Barnes
    email = aaronb@catalyst.net.nz

[alias]
    cdiff = diff --cached
    co = checkout
    cp = cherry-pick
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    track = checkout --track
    ll = log -n1
    cmt = commit -v

[push]
    default = tracking

[core]
    pager = less -r
